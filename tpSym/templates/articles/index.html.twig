{% extends 'base.html.twig' %}

{% block title %}
    Liste des Articles
{% endblock %}

{% block body %}
{% if articles %}
    <table id="articles" class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.nom }}</td>
                    <td>{{ article.prix }}</td>
                    <td>
    <a href="/article/{{ article.id }}" class="btn btn-dark">Détails</a>
    <a href="{{ path('edit_article', { id: article.id }) }}" class="btn btn-dark">Modifier</a>
    <form action="{{ path('delete_article', { id: article.id }) }}" method="POST" style="display: inline;" onsubmit="return confirm('Êtes-vous sûr de supprimer cet article?');">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>
</td>


                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
    <p>Aucun articles</p>
{% endif %}
{% endblock %}
