{% extends 'base.html.twig' %}

{% block title %}
    Liste des Articles
{% endblock %}

{% block body %}
<table id="articles" class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Catégorie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for article in articles %}
        <tr>
            <td>{{ article.nom }}</td>
            <td>{{ article.prix }}</td>
            <td>{{ article.category ? article.category.titre : 'Non défini' }}</td> {# Handle null category #}
            <td>
                <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-dark">Détails</a>
                <a href="{{ path('edit_article', {id: article.id}) }}" class="btn btn-dark">Modifier</a>
                <a href="{{ path('delete_article', {id: article.id}) }}" class="btn btn-danger" 
                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
